{
  "name": "tree-sitter-objectscript",
  "version": "1.0.0",
  "description": "Tree Sitter Grammar for InterSystems ObjectScript",
  "workspaces": [
    "expr",
    "core",
    "udl"
  ],
  "scripts": {
    "install": "node-gyp-build",
    "prepare": "./scripts/setup-dev-env.sh",
    "prebuildify": "npm run prebuildify --workspaces",
    "lint": "npm run lint --workspaces",
    "gen": "npm run gen --workspaces",
    "build": "npm run build --workspaces",
    "build-wasm": "npm run build-wasm --workspaces",
    "test": "npm run test --workspaces",
    "demo:udl": "npm run gen --workspace=udl && npm run build-wasm --workspace=udl && npm run playground --workspace=udl"
  },
  "author": "Dave McCaldon <davem@intersystems.com>",
  "contributors": [
    {
      "name": "Michael Fortunato",
      "email": "michael.n.fortunato@gmail.com"
    },
    {
      "name": "Marc Johnson",
      "email": "marc.johnson@intersystems.com"
    }
  ],
  "license": "MIT",
  "engine": {
    "node": ">=18"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.22.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/cz-commitlint": "^18.6.1",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-md": "^1.0.19",
    "eslint-plugin-prettier": "^5.1.3",
    "prebuildify": "^6.0.0",
    "prettier": "^3.3.2",
    "tree-sitter-cli": "^0.22.0",
    "tree-sitter-html": "^0.23.2"
  },
  "tree-sitter": [
    {
      "scope": "source.objectscript",
      "file-types": [
        "cls"
      ]
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "types": "bindings/node",
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ]
}
