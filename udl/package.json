{
  "name": "udl",
  "version": "1.0.0",
  "author": "Dave McCaldon <davem@intersystems.com>",
  "contributors": [
    {
      "name": "Michael Fortunato",
      "email": "michael.n.fortunato@gmail.com"
    },
    {
      "name": "Marc Johnson",
      "email": "marc.johnson@intersystems.com"
    }
  ],
  "description": "UDL tree-sitter grammar for InterSystems ObjectScript classes",
  "keywords": [
    "parser",
    "lexer",
    "objectscript",
    "class",
    ".cls"
  ],
  "license": "MIT",
  "main": "./bindings/node",
  "types": "bindings/node",
  "scripts": {
    "prebuildify": "prebuildify --napi --strip",
    "lint": "eslint grammar.js",
    "gen": "tree-sitter generate",
    "postgen": "du -h src/parser.c || echo 'Could not display parser.c size'",
    "build": "tree-sitter build",
    "build-wasm": "tree-sitter build --wasm",
    "parse": "tree-sitter parse",
    "test": "tree-sitter test",
    "bench": "./benches/x.sh",
    "playground": "tree-sitter playground",
    "demo": "npm run gen && npm run build-wasm && npm run playground",
    "install": "node-gyp-build"
  },
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "test/**"
  ],
  "tree-sitter": [
    {
      "scope": "source.objectscript.udl",
      "injection-regex": "^objectscript_udl$",
      "file-types": [
        "cls"
      ],
      "highlights": [
        "queries/highlights.scm"
      ],
      "locals": [
        "queries/locals.scm"
      ],
      "tags": [
        "queries/tags.scm"
      ]
    }
  ]
}
